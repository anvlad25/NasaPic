<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.earth_image.EarthImageFragment">

    <EditText
        android:id="@+id/lonText"
        android:hint="@string/lonTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/latText"
        android:hint="@string/latTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lonText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dateText"
        android:hint="@string/dateTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/latText"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/dimText"
        android:hint="@string/dimTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/earthImageButton"
        android:text="@string/earthImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dimText" />

    <ImageView
        android:id="@+id/earthImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earthImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>